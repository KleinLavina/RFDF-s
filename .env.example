# ======================================================
# RDFS - Environment Variables Configuration
# ======================================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control!

# ======================================================
# ENVIRONMENT
# ======================================================
# Options: development, production
ENVIRONMENT=development

# ======================================================
# DJANGO CORE
# ======================================================
# Generate a new secret key for production: python -c 'from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())'
SECRET_KEY=your-secret-key-here-change-this-in-production

# Set to False in production
DEBUG=True

# ======================================================
# ALLOWED HOSTS
# ======================================================
# Comma-separated list of allowed hosts (no spaces)
# Example: ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com,127.0.0.1
ALLOWED_HOSTS=127.0.0.1,localhost

# ======================================================
# DATABASE
# ======================================================
# PostgreSQL connection URL
# Format: postgresql://username:password@host:port/database_name

# Option 1: Local PostgreSQL (for safe local development)
DATABASE_URL=postgresql://postgres:admin@localhost:5432/rdfs_db

# Option 2: Render PostgreSQL - Internal URL (for Render deployment - use this in Render dashboard)
# DATABASE_URL=postgresql://rdfs_database_user:5f4yOSRpmltsamQvKYLbWwfuJbroy90A@dpg-d5q3366r433s73fovhb0-a/rdfs_database

# Option 3: Render PostgreSQL - External URL (for remote access from localhost - BE CAREFUL!)
# DATABASE_URL=postgresql://rdfs_database_user:5f4yOSRpmltsamQvKYLbWwfuJbroy90A@dpg-d5q3366r433s73fovhb0-pooler.oregon-postgres.render.com/rdfs_database?sslmode=require

# ======================================================
# CLOUDINARY (Media Storage)
# ======================================================
# Option 1: Use CLOUDINARY_URL (recommended - single variable)
# Format: cloudinary://api_key:api_secret@cloud_name
CLOUDINARY_URL=cloudinary://815149276221998:xsaht6ViI6EfnCdtPK6hBCGqoAk@dkqrcxc59

# Option 2: Use individual variables (alternative)
# CLOUDINARY_CLOUD_NAME=your_cloud_name
# CLOUDINARY_API_KEY=your_api_key
# CLOUDINARY_API_SECRET=your_api_secret

# ======================================================
# REDIS (Optional - for Channels/WebSockets)
# ======================================================
# Set to True to use Redis for channels (recommended for production)
USE_REDIS_CHANNEL_LAYER=False

# Redis connection URL (only needed if USE_REDIS_CHANNEL_LAYER=True)
# For local: redis://127.0.0.1:6379
# For Render Redis: redis://red-xxxxx:6379
REDIS_URL=redis://127.0.0.1:6379

# ======================================================
# DJANGO SUPERUSER (Auto-creation)
# ======================================================
# These are used by the create_admin management command
DJANGO_SUPERUSER_USERNAME=adminterminal
DJANGO_SUPERUSER_EMAIL=admin@example.com
DJANGO_SUPERUSER_PASSWORD=adminterminal

# ======================================================
# SESSION CONFIGURATION
# ======================================================
# Session timeout in seconds (default: 900 = 15 minutes)
SESSION_COOKIE_AGE=900

# ======================================================
# SECURITY SETTINGS (Production)
# ======================================================
# These are automatically enabled when ENVIRONMENT=production
# You can override them if needed:

# Force HTTPS redirect
# SECURE_SSL_REDIRECT=True

# HSTS (HTTP Strict Transport Security) duration in seconds
# SECURE_HSTS_SECONDS=31536000

# Include subdomains in HSTS
# SECURE_HSTS_INCLUDE_SUBDOMAINS=True

# Preload HSTS
# SECURE_HSTS_PRELOAD=True

# Secure cookies
# CSRF_COOKIE_SECURE=True
# SESSION_COOKIE_SECURE=True

# ======================================================
# PYTHON VERSION (for Render)
# ======================================================
# Specified in runtime.txt, but can be referenced here
# PYTHON_VERSION=3.11.7
